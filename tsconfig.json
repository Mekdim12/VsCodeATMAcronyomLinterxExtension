{
	"compilerOptions": {
	  "module": "CommonJS", // Use CommonJS for VS Code extension compatibility
	  "target": "ES2020",   // ES2020 is a safer target for Node.js environments
	  "lib": [
		"ES2020",           // Use ES2020 libraries
		"DOM"               // Add DOM if you use webviews or browser-like APIs
	  ],
	  "sourceMap": true,    // Enable source maps for debugging
	  "rootDir": "src",     // Only compile files in the src directory
	  "outDir": "dist",     // Output compiled files to the dist directory
	  "strict": true,       // Enable all strict type-checking options
	  "esModuleInterop": true, // Enable ES module interop for CommonJS compatibility
	  "skipLibCheck": true, // Skip type-checking of declaration files
	  "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
	  "resolveJsonModule": true // Allow importing JSON files
	},
	"include": [
	  "src/**/*.ts"         // Include all TypeScript files in the src directory
	],
	"exclude": [
	  "node_modules",       // Exclude node_modules
	  "dist"                // Exclude the dist directory
	]
  }